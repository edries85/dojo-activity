@model LogUser



<h2>Login</h2>
<br>
<form action="/login" method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="LEmail" class="form-control">
        <span asp-validation-for="LEmail"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="LPassword" class="form-control">
        <span asp-validation-for="LPassword"></span>
    </div>
    <input type="submit" class="btn btn-primary">
</form>